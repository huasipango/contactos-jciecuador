---
import UserBadge from './UserBadge.astro';
import type { SessionUser } from '../../types';

interface Props {
  currentPath: string;
  user?: SessionUser | null;
}

const { currentPath, user } = Astro.props;

type NavItem = { label: string; href: string; minRole?: string };

const allNavItems: NavItem[] = [
  { label: 'Directorio', href: '/' },
  { label: 'Solicitudes', href: '/requests', minRole: 'presidente_local' },
];

const VISIBLE_RANK: Record<string, number> = {
  miembro: 0,
  presidente_local: 1,
  funcionario_nacional: 2,
  administrador: 3,
};

const userRank = user ? (VISIBLE_RANK[user.role] ?? 0) : -1;

const navItems = allNavItems.filter((item) => {
  if (!item.minRole) return true;
  if (!user) return false;
  return userRank >= (VISIBLE_RANK[item.minRole] ?? 0);
});

function isActive(href: string, current: string): boolean {
  if (href === '/') return current === '/';
  return current.startsWith(href);
}
---

<header class="sticky top-0 z-40 w-full border-b border-border bg-background/95 backdrop-blur supports-backdrop-filter:bg-background/60">
  <div class="container mx-auto flex h-16 items-center justify-between px-4">
    <div class="flex items-center gap-6">
      <a href="/" class="flex items-center gap-3">
        <img
          src="/logo-color-jci.png"
          alt="JCI Ecuador"
          class="h-10 dark:hidden"
        />
        <img
          src="/logo-blanco-jci.png"
          alt="JCI Ecuador"
          class="h-10 hidden dark:block"
        />
      </a>

      <nav class="hidden md:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'inline-flex items-center justify-center h-9 px-4 rounded-md text-sm font-medium transition-colors',
              isActive(item.href, currentPath)
                ? 'bg-primary text-primary-foreground'
                : 'text-muted-foreground hover:text-foreground hover:bg-muted',
            ]}
            aria-current={isActive(item.href, currentPath) ? 'page' : undefined}
          >
            {item.label}
          </a>
        ))}
      </nav>
    </div>

    <div class="flex items-center gap-2">
      {user && (
        <UserBadge
          displayName={user.displayName}
          email={user.email}
          roleLabel={user.roleLabel}
          photoUrl={user.photoUrl}
        />
      )}

      <button
        id="theme-toggle"
        class="inline-flex items-center justify-center h-9 w-9 rounded-md text-muted-foreground hover:text-foreground hover:bg-muted transition-colors"
        aria-label="Cambiar tema"
      >
        <svg
          class="w-5 h-5 hidden dark:block"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
        </svg>
        <svg
          class="w-5 h-5 block dark:hidden"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
          ></path>
        </svg>
      </button>

      <!-- Mobile menu toggle -->
      <button
        id="mobile-menu-toggle"
        class="inline-flex items-center justify-center h-9 w-9 rounded-md text-muted-foreground hover:text-foreground hover:bg-muted transition-colors md:hidden"
        aria-label="Menú"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile navigation -->
  <nav id="mobile-menu" class="hidden md:hidden border-t border-border">
    <div class="container mx-auto px-4 py-2 space-y-1">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'flex items-center h-10 px-4 rounded-md text-sm font-medium transition-colors',
            isActive(item.href, currentPath)
              ? 'bg-primary text-primary-foreground'
              : 'text-muted-foreground hover:text-foreground hover:bg-muted',
          ]}
          aria-current={isActive(item.href, currentPath) ? 'page' : undefined}
        >
          {item.label}
        </a>
      ))}

      {user && (
        <div class="border-t border-border pt-2 mt-2">
          <div class="flex items-center gap-3 px-4 py-2">
            {user.photoUrl ? (
              <img
                src={user.photoUrl}
                alt={user.displayName}
                class="h-8 w-8 rounded-full object-cover ring-2 ring-primary/20"
                referrerpolicy="no-referrer"
              />
            ) : (
              <span class="flex h-8 w-8 items-center justify-center rounded-full bg-primary text-xs font-semibold text-primary-foreground">
                {user.displayName.split(' ').slice(0, 2).map((w: string) => w.charAt(0).toUpperCase()).join('')}
              </span>
            )}
            <div>
              <p class="text-sm font-medium text-foreground">{user.displayName}</p>
              <p class="text-[11px] text-muted-foreground">{user.roleLabel}</p>
            </div>
          </div>
          <a
            href="/auth/logout"
            class="flex items-center gap-2 h-10 px-4 rounded-md text-sm font-medium text-destructive transition-colors hover:bg-destructive/10"
          >
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Cerrar sesión
          </a>
        </div>
      )}
    </div>
  </nav>
</header>

<script>
  const mobileToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
