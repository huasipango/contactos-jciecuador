---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'select'> {}

const { class: className, ...rest } = Astro.props;

const base = 'w-full h-10 px-3 rounded-md border border-input bg-background text-foreground text-sm focus:outline-2 focus:outline-ring focus:outline-offset-0 transition-colors';

const classes = [base, className].filter(Boolean).join(' ');
---

<select class={classes} {...rest}>
  <slot />
</select>
