---
import Layout from '../layouts/Layout.astro';
import UsersTable from '../components/UsersTable.astro';
import { getUsers, getOrganizationalUnits, getAuthUrl, generateOauthState } from '../utils/googleAdmin';

export const prerender = false;

const accessToken = Astro.cookies.get('access_token')?.value;
let users: any[] = [];
let orgUnits: any[] = [];
let error = null;
let kpis = {
  totalUsers: 0,
  suspendedUsers: 0,
  inactive90dUsers: 0,
  withoutLastLogin: 0
};

if (!accessToken) {
  const state = generateOauthState();
  Astro.cookies.set('oauth_state', state, {
    path: '/',
    secure: true,
    httpOnly: true,
    sameSite: 'lax',
    maxAge: 600
  });
  const authUrl = await getAuthUrl(state);
  return Astro.redirect(authUrl);
}

try {
  [users, orgUnits] = await Promise.all([
    getUsers(accessToken),
    getOrganizationalUnits(accessToken)
  ]);
} catch (e: any) {
  if (e.message?.includes('invalid_token') || e.message?.includes('Invalid Credentials')) {
    Astro.cookies.delete('access_token');
    const state = generateOauthState();
    Astro.cookies.set('oauth_state', state, {
      path: '/',
      secure: true,
      httpOnly: true,
      sameSite: 'lax',
      maxAge: 600
    });
    const authUrl = await getAuthUrl(state);
    return Astro.redirect(authUrl);
  }
  error = e.message;
}

kpis = {
  totalUsers: users.length,
  suspendedUsers: users.filter((user) => user.suspended).length,
  inactive90dUsers: users.filter((user) => user.isInactive90d).length,
  withoutLastLogin: users.filter((user) => !user.lastLoginTime).length
};
---

<Layout title="Directorio JCI Ecuador">
  <main class="min-h-screen bg-transparent">
    {/* Header con logos */}
    <div class="container mx-auto px-4 py-8">
      <div class="flex justify-between items-center mb-8 relative">
        <img 
          src="/logo-color-jci.png" 
          alt="JCI Ecuador Logo" 
          class="h-24 dark:hidden z-10"
        />
        <img 
          src="/logo-blanco-jci.png" 
          alt="JCI Ecuador Logo" 
          class="h-24 hidden dark:block z-10"
        />
        
        {/* Diseño horizontal en el centro */}
        <div class="absolute left-0 right-0 hidden md:block" style="top: 50%; transform: translateY(-50%);">
          <img 
            src="/diseno-horizontal.png" 
            alt="Diseño JCI Ecuador" 
            class="w-full h-20 object-contain"
          />
        </div>

        <img 
          src="/somos-li-color.png" 
          alt="Somos LI" 
          class="h-20 dark:hidden z-10"
        />
        <img 
          src="/somos-li-blanco.png" 
          alt="Somos LI" 
          class="h-20 hidden dark:block z-10"
        />
      </div>

      <h1 class="text-3xl font-bold text-center mb-4 dark:text-white">
        Directorio Nacional JCI Ecuador
      </h1>

      <div class="grid md:grid-cols-4 gap-3 mb-6 max-w-6xl mx-auto">
        <div class="bg-white dark:bg-gray-800 border dark:border-gray-700 rounded-lg p-4">
          <p class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">Usuarios activos</p>
          <p class="text-2xl font-bold dark:text-white">{kpis.totalUsers - kpis.suspendedUsers}</p>
        </div>
        <div class="bg-white dark:bg-gray-800 border dark:border-gray-700 rounded-lg p-4">
          <p class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">Suspendidos</p>
          <p class="text-2xl font-bold text-red-600">{kpis.suspendedUsers}</p>
        </div>
        <div class="bg-white dark:bg-gray-800 border dark:border-gray-700 rounded-lg p-4">
          <p class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">Sin acceso en 90 días</p>
          <p class="text-2xl font-bold text-yellow-600">{kpis.inactive90dUsers}</p>
        </div>
        <div class="bg-white dark:bg-gray-800 border dark:border-gray-700 rounded-lg p-4">
          <p class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">Sin último acceso</p>
          <p class="text-2xl font-bold dark:text-white">{kpis.withoutLastLogin}</p>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-4 mb-8 max-w-6xl mx-auto">
        {/* Primera caja - Información de búsqueda */}
        <div class="bg-blue-50 dark:bg-blue-900 p-4 rounded-lg">
          <p class="text-blue-800 dark:text-blue-100 text-sm">
            Esta aplicación muestra el directorio de contactos de los miembros de JCI Ecuador.
            Para copiar una dirección de correo electrónico, puede:
            <ul class="list-disc ml-6 mt-2 text-blue-800 dark:text-blue-100">
              <li>Hacer clic en cualquier parte de la fila del usuario</li>
              <li>O usar el botón "COPIAR CORREO" al final de cada fila</li>
              <li>Filtrar por Unidad Organizativa</li>
              <li>Ordenar por último acceso</li>
            </ul>
            <span class="text-blue-800 dark:text-blue-100">
              Use el buscador para filtrar por nombre, correo o unidad organizativa.
            </span>
          </p>
        </div>

        {/* Segunda caja - Solicitud de correo */}
        <div class="bg-yellow-50 dark:bg-yellow-900 p-4 rounded-lg">
          <div class="flex flex-col h-full justify-between">
            <div>
              <p class="text-yellow-800 dark:text-yellow-100 mb-2">
                <span class="font-bold">¿Necesitas gestionar una cuenta de correo?</span>
              </p>
              <p class="text-yellow-700 dark:text-yellow-200 text-sm">
                Usa el módulo interno para solicitar nuevas cuentas, actualizar teléfono, recuperar contraseña o eliminar usuarios.
              </p>
            </div>
            <div class="mt-4 text-right">
              <a 
                href="/requests"
                class="inline-block bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-md transition-colors"
              >
                Abrir gestión de correos
              </a>
            </div>
          </div>
        </div>
      </div>

      {error ? (
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
          <strong class="font-bold">Error:</strong>
          <span class="block sm:inline">{error}</span>
        </div>
      ) : (
        <UsersTable users={users} orgUnits={orgUnits} />
      )}
    </div>

    {/* Diseño horizontal antes del footer */}
    <div class="w-full mt-12">
      <img 
        src="/diseno-horizontal.png" 
        alt="Diseño JCI Ecuador" 
        class="w-full object-cover h-24"
      />
    </div>
  </main>
</Layout>

<style>
  /* Removemos estos estilos ya que ahora están en Layout.astro */
  :global(.dark) main {
    background: transparent;
  }
</style> 