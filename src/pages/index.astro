---
import Layout from '../layouts/Layout.astro';
import UsersTable from '../components/UsersTable.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import Alert from '../components/ui/Alert.astro';
import { getUsers, getOrganizationalUnits, getAuthUrl, generateOauthState } from '../utils/googleAdmin';

export const prerender = false;

const accessToken = Astro.cookies.get('access_token')?.value;
let users: any[] = [];
let orgUnits: any[] = [];
let error = null;
let kpis = {
  totalUsers: 0,
  suspendedUsers: 0,
  inactive90dUsers: 0,
  withoutLastLogin: 0
};

if (!accessToken) {
  const state = generateOauthState();
  Astro.cookies.set('oauth_state', state, {
    path: '/',
    secure: true,
    httpOnly: true,
    sameSite: 'lax',
    maxAge: 600
  });
  const authUrl = await getAuthUrl(state);
  return Astro.redirect(authUrl);
}

try {
  [users, orgUnits] = await Promise.all([
    getUsers(accessToken),
    getOrganizationalUnits(accessToken)
  ]);
} catch (e: any) {
  if (e.message?.includes('invalid_token') || e.message?.includes('Invalid Credentials')) {
    Astro.cookies.delete('access_token');
    const state = generateOauthState();
    Astro.cookies.set('oauth_state', state, {
      path: '/',
      secure: true,
      httpOnly: true,
      sameSite: 'lax',
      maxAge: 600
    });
    const authUrl = await getAuthUrl(state);
    return Astro.redirect(authUrl);
  }
  error = e.message;
}

kpis = {
  totalUsers: users.length,
  suspendedUsers: users.filter((user) => user.suspended).length,
  inactive90dUsers: users.filter((user) => user.isInactive90d).length,
  withoutLastLogin: users.filter((user) => !user.lastLoginTime).length
};
---

<Layout title="Directorio JCI Ecuador">
  <main class="min-h-screen bg-transparent">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold text-center mb-4 text-foreground">
        Directorio Nacional JCI Ecuador
      </h1>

      <div class="grid md:grid-cols-4 gap-3 mb-6 max-w-6xl mx-auto">
        <Card class="p-4">
          <p class="text-xs uppercase tracking-wide text-muted-foreground">Usuarios activos</p>
          <p class="text-2xl font-bold text-card-foreground">{kpis.totalUsers - kpis.suspendedUsers}</p>
        </Card>
        <Card class="p-4">
          <p class="text-xs uppercase tracking-wide text-destructive">Suspendidos</p>
          <p class="text-2xl font-bold text-card-foreground">{kpis.suspendedUsers}</p>
        </Card>
        <Card class="p-4">
          <p class="text-xs uppercase tracking-wide text-warning">Sin acceso en 90 días</p>
          <p class="text-2xl font-bold text-card-foreground">{kpis.inactive90dUsers}</p>
        </Card>
        <Card class="p-4">
          <p class="text-xs uppercase tracking-wide text-muted-foreground">Sin último acceso</p>
          <p class="text-2xl font-bold text-card-foreground">{kpis.withoutLastLogin}</p>
        </Card>
      </div>

      <div class="grid md:grid-cols-2 gap-4 mb-8 max-w-6xl mx-auto">
        <Alert variant="info">
          <p class="text-sm text-foreground">
            Esta aplicación muestra el directorio de contactos de los miembros de JCI Ecuador.
            Para copiar una dirección de correo electrónico, puede:
            <ul class="list-disc ml-6 mt-2 text-foreground">
              <li>Hacer clic en cualquier parte de la fila del usuario</li>
              <li>O usar el botón "COPIAR CORREO" al final de cada fila</li>
              <li>Filtrar por Unidad Organizativa</li>
              <li>Ordenar por último acceso</li>
            </ul>
            <span class="text-foreground">
              Use el buscador para filtrar por nombre, correo o unidad organizativa.
            </span>
          </p>
        </Alert>

        <Alert variant="warning">
          <div class="flex flex-col h-full justify-between">
            <div>
              <p class="text-foreground mb-2">
                <span class="font-bold">¿Necesitas gestionar una cuenta de correo?</span>
              </p>
              <p class="text-sm text-foreground">
                Usa el módulo interno para solicitar nuevas cuentas, actualizar teléfono, recuperar contraseña o eliminar usuarios.
              </p>
            </div>
            <div class="mt-4 text-right">
              <Button as="a" href="/requests" variant="warning" size="md">
                Abrir gestión de correos
              </Button>
            </div>
          </div>
        </Alert>
      </div>

      {error ? (
        <Alert variant="error">
          <strong class="font-bold">Error:</strong>
          <span class="block sm:inline">{error}</span>
        </Alert>
      ) : (
        <UsersTable users={users} orgUnits={orgUnits} />
      )}
    </div>

  </main>
</Layout>

<style>
  :global(.dark) main {
    background: transparent;
  }
</style>
