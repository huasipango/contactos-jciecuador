---
import Layout from '../layouts/Layout.astro';
import UsersTable from '../components/UsersTable.astro';
import Alert from '../components/ui/Alert.astro';
import { getUsers, getOrganizationalUnits, getAuthUrl, generateOauthState } from '../utils/googleAdmin';
import { getSessionUser } from '../utils/auth';

export const prerender = false;

const accessToken = Astro.cookies.get('access_token')?.value;
let users: any[] = [];
let orgUnits: any[] = [];
let error = null;

if (!accessToken) {
  const state = generateOauthState();
  Astro.cookies.set('oauth_state', state, {
    path: '/',
    secure: true,
    httpOnly: true,
    sameSite: 'lax',
    maxAge: 600
  });
  const authUrl = await getAuthUrl(state);
  return Astro.redirect(authUrl);
}

const user = await getSessionUser(Astro);
const accessDenied = Astro.url.searchParams.get('error') === 'acceso_denegado';

try {
  [users, orgUnits] = await Promise.all([
    getUsers(accessToken),
    getOrganizationalUnits(accessToken)
  ]);
} catch (e: any) {
  if (e.message?.includes('invalid_token') || e.message?.includes('Invalid Credentials')) {
    Astro.cookies.delete('access_token');
    const state = generateOauthState();
    Astro.cookies.set('oauth_state', state, {
      path: '/',
      secure: true,
      httpOnly: true,
      sameSite: 'lax',
      maxAge: 600
    });
    const authUrl = await getAuthUrl(state);
    return Astro.redirect(authUrl);
  }
  error = e.message;
}
---

<Layout title="Directorio JCI Ecuador" user={user}>
  <main>
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold text-center mb-6 text-foreground">
        Directorio Nacional JCI Ecuador
      </h1>

      {accessDenied && (
        <div class="max-w-6xl mx-auto mb-6">
          <Alert variant="error">
            <p class="text-sm text-foreground">
              <strong>Acceso denegado.</strong> Tu rol actual (<span class="font-semibold">{user?.roleLabel}</span>) no tiene permisos para acceder al m√≥dulo de solicitudes.
            </p>
          </Alert>
        </div>
      )}

      {error ? (
        <Alert variant="error">
          <strong class="font-bold">Error:</strong>
          <span class="block sm:inline">{error}</span>
        </Alert>
      ) : (
        <UsersTable users={users} orgUnits={orgUnits} />
      )}
    </div>
  </main>
</Layout>

